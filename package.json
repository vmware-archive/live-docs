{
  "name": "live-docs",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "npm run build:plainjs; npm run build:ng-live-docs; npm run build-live-docs-doc; npm run build-examples-doc; ng serve",
    "build": "ng build",
    "build:example-ng-app": "ng build example-ng-app",
    "build:example-ng-app-prod": "ng build example-ng-app --prod",
    "build:plainjs": "ng build plain-js-live-docs",
    "build:ng-live-docs": "ng build ng-live-docs; tsc -p projects/ng-live-docs/scripts/tsconfig.json",
    "build:schematics": "cd projects/ng-live-docs && npm run build",
    "postbuild:ng-live-docs": "npm run build:schematics",
    "test": "ng test",
    "test:ci:plainjs": "ng test plain-js-live-docs --watch=false --browsers ChromeHeadlessNoSandbox --code-coverage",
    "test:ci:ng-live-docs": "ng test ng-live-docs --watch=false --browsers ChromeHeadlessNoSandbox --code-coverage",
    "lint": "ng lint",
    "lint-fix": "tslint --fix -p tsconfig.json",
    "e2e": "ng e2e",
    "build-live-docs-doc": "mkdir -p projects/example-ng-app/gen; node $NODE_DEBUG_OPTION dist/ng-live-docs/index.js projects/ng-live-docs/tsconfig.lib.json projects/ng-live-docs/src/public-api.ts projects/example-ng-app/gen/live-docs-doc.json",
    "build-examples-doc": "mkdir -p projects/example-ng-app/gen; node $NODE_DEBUG_OPTION dist/ng-live-docs/index.js projects/example-ng-app/tsconfig.app.json projects/example-ng-app/src/main.ts projects/example-ng-app/gen/example-ng-app-doc.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "9.1.9",
    "@angular/common": "9.1.9",
    "@angular/compiler": "9.1.9",
    "@angular/core": "9.1.9",
    "@angular/forms": "9.1.9",
    "@angular/platform-browser": "9.1.9",
    "@angular/platform-browser-dynamic": "9.1.9",
    "@angular/router": "9.1.9",
    "@clr/angular": "3.1.3",
    "@clr/core": "3.1.3",
    "@clr/icons": "3.1.3",
    "@clr/ui": "3.1.3",
    "@stackblitz/sdk": "1.3.0",
    "@webcomponents/webcomponentsjs": "2.0.0",
    "angular-cli-ghpages": "0.6.2",
    "lit-html": "1.1.2",
    "prismjs": "1.21.0",
    "rbradford-compodoc": "1.1.11",
    "rxjs": "6.5.5",
    "schematics-utilities": "2.0.2",
    "tslib": "1.10.0",
    "zone.js": "0.10.2"
  },
  "devDependencies": {
    "@actions/core": "1.2.6",
    "@actions/github": "2.2.0",
    "@angular-devkit/build-angular": "0.901.7",
    "@angular-devkit/build-ng-packagr": "0.901.7",
    "@angular/cli": "9.1.7",
    "@angular/compiler-cli": "9.1.9",
    "@angular/language-service": "9.1.9",
    "@types/jasmine": "3.3.8",
    "@types/jasminewd2": "2.0.3",
    "@types/node": "12.11.1",
    "codelyzer": "5.1.2",
    "husky": "4.2.5",
    "jasmine-core": "3.4.0",
    "jasmine-spec-reporter": "4.2.1",
    "karma": "4.1.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage": "2.0.1",
    "karma-coverage-istanbul-reporter": "2.1.1",
    "karma-jasmine": "2.0.1",
    "karma-jasmine-html-reporter": "1.4.0",
    "ng-packagr": "9.0.0",
    "prettier": "1.18.2",
    "pretty-quick": "2.0.0",
    "protractor": "5.4.0",
    "ts-node": "7.0.0",
    "tsickle": "0.38.1",
    "tslint": "5.15.0",
    "tslint-microsoft-contrib": "6.2.0",
    "typescript": "3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged; npm run lint-fix"
    }
  }
}
